{
    "name": "amber/collection",
    "description": "Wrapper class for working with arrays.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Deivi PeÃ±a",
            "email": "systemson@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amber\\Collection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.1.0",
        "php-ds/php-ds": "1.2"
    },
    "require-dev": {
        "doctrine/collections": "^1.5",
        "lavoiesl/php-benchmark": "^1.4",
        "php-coveralls/php-coveralls": "^2.1",
        "phpdocumentor/phpdocumentor": "dev-master",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.3",
        "tightenco/collect": "^5.7"
    },
    "scripts": {
        "test": "phpunit",
        "docs": "phpdoc",
        "sniff": "phpcs --standard=PSR12 ./src",
        "fix-cs": "phpcbf --standard=PSR12 ./src",
        "speed": "php ./tests/Benchmark.php",
        "pull": [
            "git pull",
            "composer update -vvv"
        ],
        "full-check": [
            "phpunit",
            "phpdoc",
            "phpcs --standard=PSR12 ./src",
            "phpcbf --standard=PSR12 ./src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "process-timeout": 0
    }
}
